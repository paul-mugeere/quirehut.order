{
  "openapi": "3.0.0",
  "info": {
    "title": "quirehut.order API",
    "description": "API for order management in QuireHut",
    "version": "0.0.1"
  },
  "paths": {
      "/orders/{customerId}": {
        "get": {
          "summary": "Get all orders for a customer",
          "operationId": "getCustomerOrders",
          "parameters": [
                {
                "name": "customerId",
                "in": "path",
                "required": true,
                "schema": {
                    "type": "string"
                }
                }
            ],
          "responses": {
            "200": {
              "description": "A list of orders for the specified customer",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "./customerOrder.schema.json"
                    }
                  }
                }
              }
            }
          }
        }
      },
    "/orders": {
      "post": {
        "summary": "Create a new order",
        "operationId": "createOrder",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./placeOrderRequest.schema.json"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./orderConfirmation.schema.json"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      }
    }
  }
}