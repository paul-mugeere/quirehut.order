{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Order Item",
  "type": "object",
  "properties": {
      "productId": {
        "type": "string",
        "description": "Unique identifier for the product"
      }, 
      "quantity": {
        "type": "integer",
        "description": "Quantity of the product ordered"
      },
      "pricePerItem": {
        "type": "number",
        "format": "float",
        "description": "Price per unit of the product"
      }
  }
}